/* components/evaluation/evaluation.wxss */
.content{
  background-color: white;
  padding:30rpx;
  border-radius: 20rpx;
  border:1rpx solid #105450;
}
image{
  width:100rpx;
  height:100rpx;
  background-color: violet;
  margin-right:40rpx;
}

.top{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom:20rpx;
}
.top-time{
  width:90%;
}

.time{
  display: flex;
  justify-content: space-between;
}

.tupian{
  width:50%;
  background-color: tomato;
}

.middle{
    width:80%;
    margin-left:130rpx;
    margin-bottom:30rpx;
}

.middle-image{
  display: flex;
  flex-direction: row;
}

.middle>view{
   margin-top:15rpx;
}

.img-view{
  display: flex;
  flex-wrap: wrap;/*flex默认不换行，设置了这个会自动换行*/
}

.bottom{
  border:1rpx solid gray;
  border-radius: 30rpx;
  padding:15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.reply{
  margin-right:10rpx;
  font-size:33rpx;
  width:232rpx;
}
.reply2{
  width:700rpx
}
