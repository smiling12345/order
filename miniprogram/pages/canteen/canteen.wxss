page{
    height:100%;
}

.second{
    height:100rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.all{
    height:100%;
}

.scroll{
    height:calc(100vh - 160rpx);/*100vh=100%height；减去上两个盒子的高度*/
    display: flex;
}
.pingjia{
    border-radius: 30rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
}

.one{
    border-radius: 0rpx;
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #105450;
   
}

.two{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
}

.three{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
    border-bottom-right-radius: 40rpx;
    border-top-right-radius: 40rpx;
}

.nav_left{/*左侧整体样式*/
   flex:2;
   background:#105450;
   text-align:center;
}

.nav_left_items{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}

.active{
    background: #fff;
    color:#000080;
}
.nav_right{
