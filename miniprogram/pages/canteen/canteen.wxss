/* pages/canteen/canteen.wxss */
page{
    height:100%;
}

.second{
    height:100rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.all{
    height:100%;
    width:100%;
}

.scroll{
    width:100%;
    height:calc(100vh - 160rpx);/*100vh=100%height；减去上两个盒子的高度*/
    display: flex;
    flex-direction: row;
}
.pingjia{
    border-radius: 30rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
    color:#BB9340 !important;
    width:150rpx !important;
    font-size:30rpx !important
}

.one{
    border-radius: 0rpx;
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
   
}

.two{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
}

.three{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
    border-bottom-right-radius: 40rpx;
    border-top-right-radius: 40rpx;
}



.nav_left{/*左侧整体样式*/
   width:200rpx;
   height:87%;
   margin-left:10rpx;
   border:1rpx solid #105450;
   background-color: #ffffff;
   box-shadow:1rpx 1rpx 5rpx 2rpx #105450;
   border-radius:30rpx
}

.active,.nav_left_items{
    display: flex;
    margin-top:20rpx;
    font-size: 35rpx;
    align-items: center;/*垂直居中*/
    justify-content: center; /*水平居中*/
    padding:20rpx;
}

.nav_left_items{
    color:#BB9340
}

.active{/*被选中*/
    color:#ffffff;
    background-color: #105450;
}
.nav_right{
    margin-top:20rpx;
    flex:1;
    width:0;
}



.bottom{
    position:fixed;
    z-index:300;
    bottom:0;
    border:1rpx solid yellow;
    border-radius: 60rpx;
    background-color: #105450;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:0 10rpx;
    width:96%;
    margin:5rpx;
}

.bottomFirst{
    display:flex;
    flex-direction: row;
}

/*蒙层效果*/
.mask_bg{
     position:fixed;
     top:0;
     bottom:0;
     left:0;
     right:0;
     /*设置背景颜色透明度*/
     opacity: 0.5;
     background-color: black;
     /*设置组件的层级*/
     z-index:100;
}

.cart_content{
    position:fixed;
    left:0;
    right:0;
    bottom:0;
    background:white;
    z-index:200;
    padding:20rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx; 
}

.cart_top{
    display: flex;
    flex-direction:row;
    background-color: #105450;
    height:50rpx;
    justify-content: space-between;
    border-bottom: 1rpx solid gray;
    align-items: center;
}

.cart_top>view{
    display: flex;
    align-items: center;
}
.cart_food{
    margin-bottom:100rpx;
    background-color: #BB9340;
}

.selected,.select{
    background-color: #105450 !important;
    color:white !important;
}

/*弹窗样式*/
.model{
  position: absolute;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
  opacity: 0.5;
  top: 0;
  left:0;
}



