/* pages/canteen/canteen.wxss */
page{
    height:100%;
}

.second{
    height:100rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.all{
    height:100%;
    width:100%;
}

.scroll{
    width:100%;
    height:calc(100vh - 160rpx);/*100vh=100%height；减去上两个盒子的高度*/
    display: flex;
    flex-direction: row;
}
.pingjia{
    border-radius: 30rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
}

.one{
    border-radius: 0rpx;
    border-bottom-left-radius: 40rpx;
    border-top-left-radius: 40rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #105450;
   
}

.two{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
}

.three{
    border-radius: 0rpx;
    border-style:solid;
    border-width: 1rpx;
    border-color: #BB9340;
    border-bottom-right-radius: 40rpx;
    border-top-right-radius: 40rpx;
}

.nav_left{/*左侧整体样式*/
   background:gray; 
   width:220rpx;
}

.active,.nav_left_items{
    display: flex;
    font-size: 35rpx;
    align-items: center;/*垂直居中*/
   justify-content: center; /*水平居中*/
    padding:20rpx;
    
}

.nav_left_items{
    background-color: darkgoldenrod;
}

.active{/*被选中*/
    background: #fff;
    color:#000080;
}
.nav_right{
    flex:1;
    width:0;
    background-color: rgb(192, 183, 247);
}



.bottom{
    position:fixed;
    bottom:0;
    border:1rpx solid yellow;
    border-radius: 60rpx;
    background-color: #105450;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding:10rpx;
    width:96%;
    margin:5rpx;
}
