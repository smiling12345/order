/* pages/order/order.wxss */
page{
  background: #F5F5F5;
}


.tabs_root2{/*绝对定位fixed，z-index为999999，能将布局层级放在最上层，避免被下层view覆盖*/
    display:flex;/*设为水平布局*/
    text-align: center;
    position:fixed;
    background:#F5F5F5;
    color:#353535;
    z-index:999999;
    max-height:94rpx;
    width: 100%;
}

/*设置选中项的文字颜色和大小，设置选中项的底部边框*/
.select_tab{
  border-bottom:4rpx solid;
  color:#105450;
  font-size: 34rpx;
}

/*设置项的高度、边距，同时设置flex=1，表示各项平分*/
.tabs_item{
   height:90rpx;
   display:inline-block;/*使元素具有高度宽度，且只排满一行，不会换行*/
   line-height:90rpx;
   margin:0 10rpx;/*外边距 上右下左*/
   padding:0 20rpx;
   flex:1;
}

.content{
  overflow: hidden;/*自动产生横向或竖向滚动条*/
  display: flex;/*可实现滚动效果*/
  flex-direction: column;
  background-color: #ffffff;
  margin:110rpx 20rpx 0 20rpx;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 10rpx 8rpx #105450;
}
.bianhao{
  display: flex;
  line-height: 80rpx;
  justify-content: space-between;
  border-bottom:1rpx solid #105450;
  background-color: #ffffff;
  margin:10rpx 20rpx 0 20rpx;
}
.canteen{
  font-size: 50rpx;
}
.card{
    height:250rpx;
    display: flex;
    flex-direction: row;
    margin: 10rpx 20rpx 10rpx 20rpx;
}
.card-img{
  background-color:#75eb4e;
}
.card-img>image{/*设置图片大小*/
  width: 250rpx;
}
.card-text{
  height:250rpx;
  width:100%;
  display:flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.card-text_{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}

.jiage{
    width:100%;
    height:80rpx;
    display:flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .card-button{
      display:flex;
      flex-direction: row;
      justify-content: space-between;
  }
  .evaluate,.again{
      background:#105450;
      color: #ffffff;
  }

  .bottom-title{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 20rpx;
    border-top: 1rpx solid #105450;
}