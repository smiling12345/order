.top {
    background-color: #0f544f;
    margin-top: 1px; 
    height: 300rpx;
    color: white;
    width: 100%;
    position:absolute;
    z-index: 1;
}

.top view:nth-child(1){
    padding-left: 8rpx;
    font-size: 30rpx;
}

.top view:nth-child(2){
    padding-left: 55rpx;
    font-size: 45rpx;
}
.top view:nth-child(3){
    padding-left: 8rpx;
    font-size: 30rpx;
}

.out{
    box-shadow: 1px 1px 10px 2px #0f544f;
    position:relative;
    z-index: 2;
    top: 200rpx;
}

.mid {
    border-radius: 25rpx;
    background-color: cadetblue;
    height: 300rpx;
    width: 700rpx;
}

.mid view:nth-child(1){
    padding-left: 55rpx;
    height: 100rpx;
    line-height: 100rpx;
}
.mid view:nth-child(2){
    
    height: 100rpx;
    border-top-color: #f1f1f1;
    border-top-style:solid;

}

.midmid{
    display: flex;
}
