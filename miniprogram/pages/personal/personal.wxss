.user{
    height:300rpx;
    background-color:#105450;
    border-radius: 10%;
    margin-top:30rpx;
    display:flex;
    align-items: center;
}

.toplogo,.toplogo>image{/*设置圆形边框*/
    margin-left:30rpx;
    width:200rpx;
    height:180rpx;
    border-radius:10%;
    overflow:hidden;/*溢出隐藏*/
}

.toptext{
    margin-left:30rpx;
    justify-content:center;
    font-weight:bold;
}

.user-name{
     font-size:50rpx;
}
.user-name2{
    margin-top: 60rpx;
    font-size:30rpx;
}



.nav{
   /* height:600rpx;*/
    margin-top: 50rpx;
    padding-left:20rpx;
    padding-right:20rpx;
    margin-bottom: 45rpx;
    border-top: 1rpx solid gray;
    border-bottom: 1rpx solid gray;
    background-color: #ffffff;
}

.item{
   display: flex;
   justify-content: space-between;
   border-bottom: 1rpx solid gainsboro;
