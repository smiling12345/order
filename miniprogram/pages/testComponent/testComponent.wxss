.top{/*顶部悬浮样式*/
    display: flex;
    justify-content: space-around;
    width:100%;
    height: 200rpx;
    border-bottom: 1rpx solid #105450;
    background-color:#f5f5f5;
    position:fixed;
    z-index: 999;
}
.left{
    display: flex;
    flex-direction: column;
    align-items: center;/*水平居中*/
    justify-content: center;/*垂直居中*/
}

.rider{
    width:90%;
    margin:0 auto;/*垂直居中*/
    border-radius: 20rpx;
    position: relative;
    top:200rpx;
    margin-top:30rpx;
}


